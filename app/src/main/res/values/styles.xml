<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Words.ImageView">
        <item name="layout_constraintDimensionRatio">1:1</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="Theme.Words.TexViewCategoryItem" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/free_sans</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.Words.TexViewGadgetItem" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/free_sans</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Theme.Words.TexViewPrice" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginBottom">16dp</item>
        <item name="fontFamily">@font/free_sans</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>